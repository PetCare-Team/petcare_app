<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editPet" >

    <ImageView
        android:id="@+id/imReturn"
        android:layout_width="47dp"
        android:layout_height="53dp"
        android:layout_marginStart="7dp"
        android:src="@drawable/ic_leftkey_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="55dp"
        android:text="Editar mascota"
        android:textColor="#0C0C0C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="126dp"
        android:layout_height="156dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/perro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <EditText
        android:id="@+id/etNamePet"
        android:layout_width="137dp"
        android:layout_height="47dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="text"
        android:padding="25px"
        android:text="Nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <Switch
        android:id="@+id/swCastrado"
        android:layout_width="324dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/borde_negro"
        android:padding="15px"
        android:text="Castrado"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNamePet"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="324dp"
        android:layout_height="64dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:gravity="start"
        android:inputType="text"
        android:padding="25px"
        android:text="Descripcion"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swCastrado" />

    <EditText
        android:id="@+id/etEdadPet"
        android:layout_width="132dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="54dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="text"
        android:padding="25px"
        android:text="Edad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <Button
        android:id="@+id/btSavePet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="26dp"
        android:text="Guardar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>